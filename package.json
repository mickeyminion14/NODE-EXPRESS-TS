    "url": "git+https://github.com/soelinn/express-ts-starter.git"
  },
  "dependencies": {
    "@types/compression": "^0.0.35",
    "@types/helmet": "^0.0.37",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "express": "^4.18.2",
    "helmet": "^3.23.3",
    "joi": "^17.9.1",
    "json-colorizer": "^2.2.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "reflect-metadata": "^0.1.13",
    "swagger-express-ts": "^1.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^26.0.24",
