    "@types/node": "^14.18.42",
    "@types/swagger-ui-express": "^4.1.3",
    "eslint": "^7.32.0",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  }
